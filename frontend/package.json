{
  "name": "id-management",
  "version": "0.4.1",
  "private": true,
  "description": "Sistema de Gerenciamento de IDs",
  "author": "Luiz",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:log": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"New-Item -ItemType Directory -Path logs -Force | Out-Null; $ts = Get-Date -Format yyyy-MM-dd_HH-mm-ss; $log = \"logs/dev-$ts.log\"; Write-Host (\"[dev:log] Salvando em: $log\"); npm run dev 2>&1 | Tee-Object -FilePath $log\"",
    "build": "tsc -b && vite build",
    "build:electron": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "npm run build:electron && npx electron-packager . \"ID Management System\" --platform=win32 --arch=x64 --out=dist-electron --overwrite --prune=true",
    "electron:dist": "npm run build:electron && electron-builder --publish=never",
    "electron:publish": "npm run build:electron && electron-builder --publish=always"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.468.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "homepage": "./",
  "build": {
    "appId": "com.idmanagement.app",
    "productName": "ID Management System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true,
      "artifactName": "ID-Management-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "vPrefixedTagName": true,
        "owner": "${env.ELECTRON_PUBLISH_OWNER}",
        "repo": "${env.ELECTRON_PUBLISH_REPO}"
      }
    ],
    "compression": "store",
    "extraMetadata": {
      "main": "electron/main.cjs"
    }
  }
}
